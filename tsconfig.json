{
  "include": ["src/*.ts"],
  "exclude": ["test", "**/*.test.ts", "**/*.spec.ts"],
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowJs": true,
    "types": ["node"]
  }
}
